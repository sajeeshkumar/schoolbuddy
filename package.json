{
  "name": "schoolbuddy",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --verbose"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[jt]sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-flow",
            [
              "@babel/preset-react",
              {
                "runtime": "automatic"
              }
            ]
          ]
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@google/generative-ai)/)"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ],
    "moduleNameMapper": {
      "^react-native$": "<rootDir>/src/__mocks__/react-native.js",
      "^expo-linear-gradient$": "<rootDir>/src/__mocks__/expo-linear-gradient.js",
      "^expo-image-picker$": "<rootDir>/src/__mocks__/expo-image-picker.js",
      "^expo-status-bar$": "<rootDir>/src/__mocks__/expo-status-bar.js",
      "^@react-native-async-storage/async-storage$": "<rootDir>/src/__mocks__/async-storage.js",
      "^@react-navigation/native$": "<rootDir>/src/__mocks__/react-navigation-native.js",
      "^@react-navigation/native-stack$": "<rootDir>/src/__mocks__/react-navigation-native-stack.js",
      "^.*/config/apiConfig$": "<rootDir>/src/__mocks__/apiConfig.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "e2e_image_test"
    ]
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@google/generative-ai": "^0.24.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/native-stack": "^7.13.0",
    "expo": "~54.0.33",
    "expo-image-picker": "^17.0.10",
    "expo-linear-gradient": "^15.0.8",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.23.0",
    "react-native-web": "^0.21.0"
  },
  "private": true,
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-flow": "^7.27.1",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.17"
  }
}